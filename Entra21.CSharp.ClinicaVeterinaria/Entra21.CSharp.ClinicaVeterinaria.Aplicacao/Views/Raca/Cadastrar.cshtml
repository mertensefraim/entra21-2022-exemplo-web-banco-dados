@model RacaCadastrarViewModel;
@{
    var especies = ViewBag.Especies as List<string>;
    especies.Add("Selecione uma espécie");

    var selectDasEspecies = new SelectList(especies, "Selecione uma espécie");
}


<h1>Cadastro de Raça</h1>

<form asp-action="cadastrar" method="POST">
    <div class="form-group col-md-12">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group col-md-12 mb-2" />
    <label asp-for="Especie"></label>
    <select asp-for="Especie" asp-items="selectDasEspecies" class="form-select mb-2"></select>
    <span asp-validation-for="Especie" class="text-danger"></span>
    <div>
        <a href="/raca" class="btn btn-outline-danger float-start">Cancelar <i class="fa-solid fa-x"></i></a>
        <button class="btn btn-success float-end" type="submit">Salvar <i class="fas fa-arrow-right"></i></button>
    </div>
</form>